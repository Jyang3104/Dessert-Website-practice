
<form method="POST" action="/clerk/add" class="form" enctype="multipart/form-data">
<fieldset class="fd">
     <legend>Please Signup</legend>

<label for="title">Product Title</label>
<input type="text" name="title" id="title" required/>

<label for="id">Product ID</label>
<input type="text" name="id" id="id" required/>

<label for="pic">Product Picture</label>
<input type="file" name="pic" id="pic">
<div class="err">{{error.pic}}</div><br>

<label for="cate">Product Category</label>
<select name="cate" id="cate" required/>
    <option value="chocolate">Chocolate</option>
    <option value="drink">Drink</option>
    <option value="cake">Cake</option>
    <option value="icecream">Ice Cream</option>
</select><br>

<label for="unit">Product Unit</label>
<input type="text" name="unit" id="unit" required/>

<label>Best Seller</label>
<lable for="isB" class="ra">Yes</lable>
<input type="radio" name="best" id="isB" value="true">
<lable for="notB" class="ra">No</lable>
<input type="radio" name="best" id="notB" value="false">


<label for="qty">Product Quantity</label>
<input type="number" id="qty" name="qty">

<label for="price">Product Price</label>
<input type="number" step="0.01" id="price" name="price" required/>

<label for="ingredient">Ingredients</label>
<input type="text" name="ingredient" id="ingredient">


<div id="button">
<input class="btn" type="submit" value="ADD ITEM">    
</div>
</fieldset>

</form>