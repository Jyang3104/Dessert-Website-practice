
<form method="POST" action="/clerk/edit/{{_id}}?method=PUT" class="form" enctype="multipart/form-data">
<fieldset class="fd">
     <legend>Please Signup</legend>

<label for="title">Product Title</label>
<input type="text" name="title" id="title" value="{{title}}" required/>


<label for="cate">Product Category</label>
<select name="cate" id="cate" required/>
    <option value="chocolate" {{#if_eq cate "chocolate"}}{{/if_eq}}>Chocolate</option>
    <option value="drink"{{#if_eq cate "drink"}}{{/if_eq}}>Drink</option>
    <option value="cake"{{#if_eq cate "cake"}}{{/if_eq}}>Cake</option>
    <option value="icecream"{{#if_eq cate "icecream"}}{{/if_eq}}>Ice Cream</option>
</select>

<label for="unit">Product Unit</label>
<input type="text" name="unit" id="unit" value="{{unit}}" required/>

<label>Best Seller</label>
<lable for="isB" class="ra">Yes</lable>
<input type="radio" name="best" id="isB" value="true" class="ra"{{#if_eq2 best}}{{/if_eq2}}><br>
<lable for="notB" class="ra">No</lable>
<input type="radio" name="best" id="notB" value="false" {{#if_neq best}}{{/if_neq}}><br>


<label for="qty">Product Quantity</label>
<input type="number" id="qty" name="qty" value="{{qty}}">

<label for="price">Product Price</label>
<input type="number" step="0.01" id="price" name="price" value="{{price}}" required/>

<label for="ingredient">Ingredients</label>
<input type="text" name="ingredient" id="ingredient" value="{{ingredient}}">


<div id="button">
<input class="btn" type="submit" value="UPDATE ITEM">    
</div>
</fieldset>

</form>