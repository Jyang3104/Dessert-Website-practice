

<h2 id="pTitle">Products of {{category}}</h2>
<div id="proPage">
<div id="cateBtn">

       <div class="cateB">
               <form action="/products" method="POST">
               <input value="all" name="category" type="hidden">
               <button class="proCatBtn" type="submit" >All</button>
               </form>
       </div>
       {{#each cateData}}

       <div class="cateB">
               <form action="/products" method="POST">
               <input value="{{this.category}}" name="category" type="hidden">
               <button class="proCatBtn" type="submit">{{this.category}}</button>
               </form>
       </div>
        {{/each}}
</div>


<div id="pList">
    {{#each data}}
    <div class="product">
        <div class="pImg">
            <img src="/img/{{this.pic}}" width="180vw" alt="{{this.title}}" />
        </div>
    <div class="pName">{{this.title}}</div>
    <div>$ {{this.price}} / {{this.unit}}</div>
    <div class="oForm">
    <form action="/products/detail/{{this.mId}}" method="GET">
    <input class="obtn" type="submit" value="DETAIL">
    </form>
    </div>
    </div>

    {{/each}}
</div>
</div>