
<h1>Create New Account</h1>
<form class="form" action="/signup" method="POST">
<fieldset class="fd">
     <legend>Please Signup</legend>

{{#each error}}

<div class="err">*ERROR:{{this}}</div>

{{/each}}

<label for="name">Your Name</label>
<input id="name" name="name" type="text" placeholder="Please Enter Your Name" maxlength="25" size="70">

<label for="Email">Your Email</label>
<input id="Email" name="Email" type="email" placeholder="Please Enter Your Email" maxlength="25" size="70">

<label for="pwd">Password</label>
<input id="pwd" name="pwd" type="password" placeholder="Please Enter Your Password" maxlength="25" size="70">

<label for="pwd2">Confirm Password</label>
<input id="pwd2" name="pwd2" type="password" placeholder="Please Enter Your Password Again" maxlength="25" size="70">

<div id="button">
<input class="btn" type="submit" value="SIGNUP">    
</div>
</fieldset>
 </form>

  